/**
 * Memory of 4K 16-bit registers.
 * If load is asserted, the value of the register selected by
 * address is set to in; Otherwise, the value does not change.
 * The value of the selected register is emitted by out.
 */
CHIP RAM4K {
    IN in[16], load, address[12];
    OUT out[16];

    PARTS:
    DMux8Way(in=load, sel=address[9..11], a=first, b=second, c=third, d=fourth, e=fifth, f=sixth, g=seventh, h=eighth);

    RAM512(in=in, load=first, address=address[0..8], out=out1);
    RAM512(in=in, load=second, address=address[0..8], out=out2);
    RAM512(in=in, load=third, address=address[0..8], out=out3);
    RAM512(in=in, load=fourth, address=address[0..8], out=out4);
    RAM512(in=in, load=fifth, address=address[0..8], out=out5);
    RAM512(in=in, load=sixth, address=address[0..8], out=out6);
    RAM512(in=in, load=seventh, address=address[0..8], out=out7);
    RAM512(in=in, load=eighth, address=address[0..8], out=out8);

    Mux8Way16(a=out1, b=out2, c=out3, d=out4, e=out5, f=out6, g=out7, h=out8, sel=address[9..11], out=out);
}
